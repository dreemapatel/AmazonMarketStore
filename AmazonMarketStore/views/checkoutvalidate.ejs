          <form accept-charset="UTF-8" action="/submitorder" class="require-validation" data-cc-on-file="false" data-stripe-publishable-key="pk_bQQaTxnaZlzv4FnnuZ28LFHccVSaj" id="payment-form" method="post">
          <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="" /><input name="_method" type="hidden" value="Post" /><input name="authenticity_token" type="hidden" value="qLZ9cScer7ZxqulsUWazw4x3cSEzv899SP/7ThPCOV8=" /></div>
            <div class='form-row'>
              <div class='col-xs-12 form-group required'>
                <label class='control-label'>Name on Card</label>
                <input class='form-control' size='4' type='text' required autofocus>
              </div>
            </div>
