<html>
  <head>
    <title>Home</title>
   <link rel='stylesheet' href='/stylesheets/css/bootstrap.min.css' />
   <link href="/stylesheets/css/justified-nav.css" rel="stylesheet">
   <link href="/stylesheets/css/carousel.css" rel="stylesheet">
   <link href="/stylesheets/css/grid.css" rel="stylesheet">
   
  </head>
  <body>
  
  <div class="container">
  <ul class="nav navbar-nav navbar-right">
            <li><b> Logged in as <font color="#43C6DB"> <%= fn %> <%= ln %> </font></b></li>
            
          </ul>

      <div class="masthead">
        <h3 class="text-muted"><font color="#43C6DB">Amazon Store</font></h3>
        
        <ul class="nav nav-justified">
          <li><a href="/home">Home</a></li>
           <li class="dropdown">
              <a href="#" class="dropdown-toggle,active" data-toggle="dropdown">Categories <b class="caret"></b></a>
              <ul class="dropdown-menu">    
                <li><a href="/electronics">Electronics</a></li>
                <li><a href="/sports">Sporting goods</a></li>
                <li><a href="/books">Books</a></li>
                
              </ul>
            </li>
          <li><a href="/mycart">My Cart</a></li> 
          <li><a href="/mypurchase">My Purchases</a></li>   
          <li><a href="/logout">Logout</a></li>
          </ul>
          
      </div>
	
	<% if (typeof empty == "undefined") { %>	
      <div class="page-header">
      
        <h3>Cart</h3>
        
      </div>

      <form action='/checkout' method='post'>
      <div class="row">
      <div class="col-md-3"> <b> Product Name </b></div>
      <div class="col-md-2"> <b> Category Name </b></div>
      <div class="col-md-2"> <b> Quantity </b></div>
      <div class="col-md-2"> <b> Price </b></div>
      <div class="col-md-3"> <b> Choose item if you want to Remove</b></div>
      <% for (var i=0;i<details.length;i++){ %>
        <div class="col-md-3"> <%= details[i].product_name %></div>
         <div class="col-md-2"> <%= details[i].cat_name %></div>
        <div class="col-md-2"><%= details[i].quant  %></div>
        
        <div class="col-md-2">$<%= details[i].price %></div>
       
        <div class="col-md-3"><a href="/removeitem?pid='<%= details[i].product_id %>'">Remove</a></div>
       <% } %> 
       
      <div class="col-md-6"> <b><center> Total Price: <center> </b></div>
      <div class="col-md-6"> <b> $<%= total %> </b></div>
      </div>
       <p> <button class="btn btn-lg btn-primary btn-block" type="submit">Checkout</button></p>
       </form>
       <% } %>
       <% if (typeof empty !== "undefined") { %>	
       <div class="page-header">
      
        <h3><%= empty %></h3>
        
      </div>
      <% } %>
       
       
     
      <!-- Site footer --> 
      <div class="footer"> 
       
      </div>

    </div> <!-- /container -->
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
     <script src='/stylesheets/js/bootstrap.min.js'></script>
    
    </body> 
    </html>  